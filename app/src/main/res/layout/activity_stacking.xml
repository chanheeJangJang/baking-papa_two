<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stacking"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtmission3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD69A"
        android:text="20초 동안 그림에 나온 케익을 만들어보자!"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="27dp"
            android:layout_marginBottom="9dp"
            android:text="남은 시간: 20"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/Success_Count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="21dp"
            android:text="성공 횟수: 0"
            android:textSize="25dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="8">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background1"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="주문"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/recipe0"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="260dp"/>
            <ImageView
                android:id="@+id/recipe1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="230dp"/>
            <ImageView
                android:id="@+id/recipe2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="210dp"/>
            <ImageView
                android:id="@+id/recipe3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="190dp"/>
            <ImageView
                android:id="@+id/recipe4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="170dp"/>
            <ImageView
                android:id="@+id/recipe5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"/>
            <ImageView
                android:id="@+id/recipe6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="130dp"/>
            <ImageView
                android:id="@+id/recipe7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"/>
            <ImageView
                android:id="@+id/recipe8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="90dp"/>
            <ImageView
                android:id="@+id/recipe9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"/>
            <ImageView
                android:id="@+id/recipe10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background1"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="제작"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/my_recipe0"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="260dp"/>
            <ImageView
                android:id="@+id/my_recipe1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="230dp"/>
            <ImageView
                android:id="@+id/my_recipe2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="210dp"/>
            <ImageView
                android:id="@+id/my_recipe3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="190dp"/>
            <ImageView
                android:id="@+id/my_recipe4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="170dp"/>
            <ImageView
                android:id="@+id/my_recipe5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"/>
            <ImageView
                android:id="@+id/my_recipe6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="130dp"/>
            <ImageView
                android:id="@+id/my_recipe7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"/>
            <ImageView
                android:id="@+id/my_recipe8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="90dp"/>
            <ImageView
                android:id="@+id/my_recipe9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"/>
            <ImageView
                android:id="@+id/my_recipe10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"/>
        </FrameLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_weight="5">

        <ImageButton
            android:id="@+id/bread_top_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bread_top"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/csyrup_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/csyrup"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ssyrup_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ssyrup"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/strawberry_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/strawberry"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/bread_bottom_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bread_bottom"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/sjelly_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sjelly"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ccream_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ccream"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/scream_btn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="3"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/scream"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/retry_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:backgroundTint="#EBAF4E"
            android:text="다시 만들기"
            android:textColor="#640400"
            android:textSize="20dp" />
    </GridLayout>

</LinearLayout>
